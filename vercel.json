{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "routes": [
    {
      "src": "/wp-content/(.*)",
      "dest": "/public_html/wp-content/$1"
    },
    {
      "src": "/wp-includes/(.*)",
      "dest": "/public_html/wp-includes/$1"
    },
    {
      "src": "/wp-admin/(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))$",
      "dest": "/public_html/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "DB_NAME": "@db_name",
    "DB_USER": "@db_user", 
    "DB_PASSWORD": "@db_password",
    "DB_HOST": "@db_host",
    "WP_HOME": "@wp_home",
    "WP_SITEURL": "@wp_siteurl"
  },
  "build": {
    "env": {
      "PHP_VERSION": "8.1"
    }
  }
}